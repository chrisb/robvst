- collapsed ||= false
article id="post-#{post.id}" class="#{collapsed ? 'collapsed' : 'full'} post"
  - if post.external?
    h1.external
      - if @single_post
        = link_to post.title, post.url
      - else
        = link_to post.title, post.url
        = link_to 'âš“', post.slug, :class => 'permalink'
  - else
    h1
      - if @single_post
        = post.title
      - else
        = link_to post.title, post
  time= post.published_at ? post.published_at.to_formatted_s(:day_month_year) : ''
  .post id=dom_id(post) class="#{'collapsed' if collapsed}"
    = markdown(post.content)
  #edit-link.hide data-href="#{edit_post_path post.id}"